<% title "Weather conditions in #{@city}" %>
<div class="container container-narrow py-4">
  <h1 class="display-1 fw-bold mb-3 position-relative">
    <%= link_to "Geonde", api_path, class: "text-primary-gradient" %>
    <span class="position-absolute top-0 translate-middle badge rounded-pill bg-danger fs-5">alpha</span>
  </h1>

  <h3>
    <%= link_to "Weather conditions", api_weather_conditions_path, class: "text-reset" %>
    in <%= @city %>
    <% if @airport %>
      <small class="text-body-secondary">(<%= @airport %>)</small>
    <% end %>
  </h3>

  <table class="table table-striped font-monospace">
    <thead>
      <tr>
        <th scope="col">Parameters</th>
        <th scope="col" class="text-end">Values</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <svg class="align-text-bottom me-1" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-clock"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
          Time
        </td>
        <td class="text-end">
          <%= @weather.time.future? ? "+" : "-" %><%= time_ago(@weather.time) %>
        </td>
      </tr>
      <% if @weather.temperature.present? %>
        <tr>
          <td>
            <svg class="align-text-bottom me-1" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-thermometer"><path d="M14 4v10.54a4 4 0 1 1-4 0V4a2 2 0 0 1 4 0Z"/></svg>
            Temperature
          </td>
          <td class="text-end"><%= @weather.temperature %>°C</td>
        </tr>
      <% end %>
      <% if @weather.humidity.present? %>
        <tr>
          <td>
            <svg class="align-text-bottom me-1" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-droplets"><path d="M7 16.3c2.2 0 4-1.83 4-4.05 0-1.16-.57-2.26-1.71-3.19S7.29 6.75 7 5.3c-.29 1.45-1.14 2.84-2.29 3.76S3 11.1 3 12.25c0 2.22 1.8 4.05 4 4.05z"/><path d="M12.56 6.6A10.97 10.97 0 0 0 14 3.02c.5 2.5 2 4.9 4 6.5s3 3.5 3 5.5a6.98 6.98 0 0 1-11.91 4.97"/></svg>
            Humidity
          </td>
          <td class="text-end"><%= @weather.humidity %>%</td>
        </tr>
      <% end %>
      <% if @weather.precipitation.present? %>
        <tr>
          <td>
            <svg class="align-text-bottom me-1" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-cloud-rain"><path d="M4 14.899A7 7 0 1 1 15.71 8h1.79a4.5 4.5 0 0 1 2.5 8.242"/><path d="M16 14v6"/><path d="M8 14v6"/><path d="M12 16v6"/></svg>
            Rain
          </td>
          <td class="text-end"><%= @weather.precipitation %> mm</td>
        </tr>
      <% end %>
      <tr>
        <td>
          <svg class="align-text-bottom me-1" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-wind"><path d="M17.7 7.7a2.5 2.5 0 1 1 1.8 4.3H2"/><path d="M9.6 4.6A2 2 0 1 1 11 8H2"/><path d="M12.6 19.4A2 2 0 1 0 14 16H2"/></svg>
          Wind
        </td>
        <td class="text-end">
          <%= @weather.wind %> m/s
          <% if @weather.wind_direction.present? %>
            (<%= @weather.wind_direction%>°)
          <% end %>
        </td>
      </tr>
      <% if @weather.nebulosity.present? %>
        <tr>
          <td>
            <svg class="align-text-bottom me-1" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-cloudy"><path d="M17.5 21H9a7 7 0 1 1 6.71-9h1.79a4.5 4.5 0 1 1 0 9Z"/><path d="M22 10a3 3 0 0 0-3-3h-2.207a5.502 5.502 0 0 0-10.702.5"/></svg>
            Clouds
          </td>
          <td class="text-end"><%= @weather.nebulosity %>%</td>
        </tr>
      <% end %>
      <% if @weather.radiation.present? %>
        <tr>
          <td>
            <svg class="align-text-bottom me-1" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-sun"><circle cx="12" cy="12" r="4"/><path d="M12 2v2"/><path d="M12 20v2"/><path d="m4.93 4.93 1.41 1.41"/><path d="m17.66 17.66 1.41 1.41"/><path d="M2 12h2"/><path d="M20 12h2"/><path d="m6.34 17.66-1.41 1.41"/><path d="m19.07 4.93-1.41 1.41"/></svg>
            Radiation
          </td>
          <td class="text-end"><%= @weather.radiation %> W/m²</td>
        </tr>
      <% end %>
      <% if @weather.pressure.present? %>
        <tr>
          <td>
            <svg class="align-text-bottom me-1" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-gauge"><path d="m12 14 4-4"/><path d="M3.34 19a10 10 0 1 1 17.32 0"/></svg>
            Pressure
          </td>
          <td class="text-end"><%= @weather.pressure %> hPa</td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <p>
    <%= "Source".pluralize(@sources.count) %>:
    <% @sources.each_with_index do |source, index| %>
      <%= link_to_source source %><%= index < @sources.length - 1 ? "," : "" %>
    <% end %>
  </p>
</div>
