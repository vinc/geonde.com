<div class="container py-4">
  <h1 class="display-1 fw-bold mb-3"><%= link_to "Geonde", root_path, class:"text-primary" %></h1>

  <h3>Electricity Data</h3>
  <ul>
    <% @countries.each do |country| %>
      <li><%= link_to country.name, "/electricity/#{country.code}" %></li>
    <% end %>
  </ul>

  <p class="mt-3"><%= pluralize(@countries.count, "country") %></p>
</div>
