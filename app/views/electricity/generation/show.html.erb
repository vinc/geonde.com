<div class="container py-4">
  <h2>Electricity Generation in <%= @country.name %></h2>

  <div class="row">
    <div class="col-sm-8">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Fuel</th>
            <th scope="col">Power</th>
          </tr>
        </thead>
        <tbody>
          <% @country.fuels.sort_by { |_, v| v }.each do |name, value| %>
            <tr>
              <td><%= name.capitalize %></td>
              <td><%= value %></td>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th><strong>Total</strong></td>
            <td><strong><%= @country.fuels.values.sum %></strong></td>
          </tr>
        </tfoot>
      </table>
      <p>Unit: MW</p>
      <p>Source: <%= link_to_source @country.source %></p>
    </div>
  </div>
</div>
